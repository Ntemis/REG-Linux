From 3779e0460d3efc2a6ce9c591597157ab5c6ad422 Mon Sep 17 00:00:00 2001
From: Martin Blumenstingl <martin.blumenstingl@googlemail.com>
Date: Mon, 4 May 2020 00:17:04 +0200
Subject: [PATCH 80/95] ARM: dts: meson8m2: mxiii: Enable the Micro USB OTG
 connector - WiP

WiP

Signed-off-by: Martin Blumenstingl <martin.blumenstingl@googlemail.com>
---
 arch/arm/boot/dts/amlogic/meson8m2-mxiii.dtsi | 35 +++++++++++++++++++
 1 file changed, 35 insertions(+)

diff --git a/arch/arm/boot/dts/amlogic/meson8m2-mxiii.dtsi b/arch/arm/boot/dts/amlogic/meson8m2-mxiii.dtsi
index ee61e2ebcf65..7f192799718a 100644
--- a/arch/arm/boot/dts/amlogic/meson8m2-mxiii.dtsi
+++ b/arch/arm/boot/dts/amlogic/meson8m2-mxiii.dtsi
@@ -122,6 +122,18 @@ spdif_dit: spdif-audio-codec {
 		sound-name-prefix = "DIT";
 	};
 
+	usb_vbus: regulator-usb-vbus {
+		compatible = "regulator-fixed";
+
+		regulator-name = "USB_VBUS";
+
+		regulator-min-microvolt = <5000000>;
+		regulator-max-microvolt = <5000000>;
+
+		gpio = <&gpio GPIOZ_1 GPIO_ACTIVE_HIGH>;
+		enable-active-high;
+	};
+
 	vcc_3v3: regulator-vcc3v3 {
 		compatible = "regulator-fixed";
 		regulator-name = "VCC3V3";
@@ -332,6 +344,16 @@ &uart_AO {
 
 &usb0 {
 	status = "okay";
+
+	dr_mode = "otg";
+	usb-role-switch;
+	role-switch-default-mode = "peripheral";
+
+	port {
+		usb_to_musbcon: endpoint {
+			remote-endpoint = <&musbcon_to_usb>;
+		};
+	};
 };
 
 &usb1 {
@@ -340,6 +362,19 @@ &usb1 {
 
 &usb0_phy {
 	status = "okay";
+
+	connector {
+		compatible = "gpio-usb-b-connector", "usb-b-connector";
+		type = "micro";
+		id-gpios = <&usb0_phy 0 GPIO_ACTIVE_HIGH>;
+		vbus-supply = <&usb_vbus>;
+
+		port {
+			musbcon_to_usb: endpoint {
+				remote-endpoint = <&usb_to_musbcon>;
+			};
+		};
+	};
 };
 
 &usb1_phy {
