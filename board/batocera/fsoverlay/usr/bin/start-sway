#!/bin/sh

# Start sway in background
SWAY_LOG_FILE=/userdata/system/logs/sway.log
WLR_LIBINPUT_NO_DEVICES=1 /usr/bin/sway -c /etc/sway/config -d & > ${SWAY_LOG_FILE} 2>&1

# TODO remove ugly sleep for debug
sleep 10

# XDG / Wayland environment variables
export WAYLAND_DISPLAY=wayland-1
export XDG_RUNTIME_DIR=/var/run
export SWAYSOCK=/var/run/sway-ipc.0.sock
export SDL_VIDEODRIVER=wayland

