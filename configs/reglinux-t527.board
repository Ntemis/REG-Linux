include toolchain-gcc14-glibc.common
include reglinux-board.common

# Target definition
BR2_aarch64=y
BR2_cortex_a55=y
BR2_ARM_FPU_NEON_FP_ARMV8=y
BR2_PACKAGE_SYSTEM_TARGET_T527=y
BR2_TARGET_OPTIMIZATION="-pipe -fsigned-char -march=armv8.2-a -mtune=cortex-a55"
#BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_REGLINUX_PATH)/board/patches $(BR2_EXTERNAL_REGLINUX_PATH)/board/reglinux/patches/aarch64 $(BR2_EXTERNAL_REGLINUX_PATH)/board/reglinux/patches/gles $(BR2_EXTERNAL_REGLINUX_PATH)/board/allwinner/t527/patches"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_REGLINUX_PATH)/board/fsoverlay $(BR2_EXTERNAL_REGLINUX_PATH)/board/allwinner/t527/fsoverlay"
BR2_TARGET_ROOTFS_SQUASHFS4_ZSTD=y

# Linux headers same as kernel, a 5.15 series
BR2_KERNEL_HEADERS_AS_KERNEL=y
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_5_15=y

# Vendor kernel 5.15 (until mainline ready, is being upstreamed)
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_GIT=y
BR2_LINUX_KERNEL_CUSTOM_REPO_URL="https://github.com/orangepi-xunlong/linux-orangepi"
BR2_LINUX_KERNEL_CUSTOM_REPO_VERSION="orange-pi-5.15-sun55iw3"
BR2_LINUX_KERNEL_PATCH="$(BR2_EXTERNAL_REGLINUX_PATH)/board/allwinner/t527/linux_patches"
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="$(BR2_EXTERNAL_REGLINUX_PATH)/board/allwinner/t527/linux-t527-current.config"
BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_REGLINUX_PATH)/board/reglinux/linux-defconfig-reglinux.config"
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# Build the DTB from the kernel sources
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="allwinner/sun55i-t527-orangepi-4a"
BR2_LINUX_KERNEL_CUSTOM_DTS_PATH="$(BR2_EXTERNAL_REGLINUX_PATH)/board/allwinner/t527/sun55i-a527-radxa-a5e.dts"

# GPU
BR2_PACKAGE_SYSTEM_PANFROST_MESA3D=y

# Allow wayland
BR2_PACKAGE_REGLINUX_SWAY=y

# Bootloader (TODO, is a mess ATM)
#https://github.com/orangepi-xunlong/u-boot-orangepi/commits/v2018.05-t527

# spi flash support
BR2_PACKAGE_MTD=y

# Filesystem
BR2_TARGET_ROOTFS_CPIO_LZ4=y
