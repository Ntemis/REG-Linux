include toolchain-gcc14-glibc.common
include reglinux-board.common

# Target definition (RV64GC+V, aka riscv64gc)
BR2_riscv=y
BR2_RISCV_64=y
BR2_RISCV_ISA_RVC=y
BR2_riscv_g=y
BR2_PACKAGE_SYSTEM_TARGET_K1=y
BR2_TARGET_OPTIMIZATION="-pipe -fsigned-char -mabi=lp64d -march=rv64imafdv"
#BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_REGLINUX_PATH)/board/patches $(BR2_EXTERNAL_REGLINUX_PATH)/board/reglinux/patches/riscv64"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_REGLINUX_PATH)/board/fsoverlay $(BR2_EXTERNAL_REGLINUX_PATH)/board/spacemit/k1/fsoverlay"
BR2_TARGET_ROOTFS_SQUASHFS4_ZSTD=y

# Linux headers same as kernel, a 6.6 series
BR2_KERNEL_HEADERS_6_6=y
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_6=y

# Kernel - Version: 6.6.36-vendor
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_GIT=y
BR2_LINUX_KERNEL_CUSTOM_REPO_URL="https://github.com/BPI-SINOVOIP/pi-linux.git"
BR2_LINUX_KERNEL_CUSTOM_REPO_VERSION="linux-6.6.36-k1-dev"
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="$(BR2_EXTERNAL_REGLINUX_PATH)/board/spacemit/k1/linux-defconfig.config"
BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_REGLINUX_PATH)/board/reglinux/linux-defconfig-reglinux.config"
BR2_LINUX_KERNEL_INSTALL_TARGET=y
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y
BR2_LINUX_KERNEL_PATCH="$(BR2_EXTERNAL_REGLINUX_PATH)/board/spacemit/k1/linux_patches"
# Vendor-specific FIT kernel image format (until mainline)
BR2_LINUX_KERNEL_IMAGE_TARGET_CUSTOM=y
BR2_LINUX_KERNEL_IMAGE_TARGET_NAME="Image.itb"
BR2_LINUX_KERNEL_IMAGE_NAME="Image.itb"

# Build the DTB from the kernel sources
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="spacemit/k1-bananapi-f3"

# Custom CPIO dracut.conf for PVR firwmare
BR2_TARGET_ROOTFS_CPIO_DRACUT_CONF_FILES="$(BR2_EXTERNAL_REGLINUX_PATH)/board/spacemit/k1/dracut.conf"

# use blob + patched mesa
BR2_PACKAGE_IMG_GPU_POWERVR=y
BR2_PACKAGE_IMG_MESA_3D=y
#BR2_PACKAGE_IMG_MESA3D_OPENGL_ES=y
#BR2_PACKAGE_IMG_MESA3D_OPENGL_EGL=y
#BR2_PACKAGE_IMG_MESA3D_OPENGL_GLX=y
#BR2_PACKAGE_IMG_MESA3D_GALLIUM_DRIVER_SVGA=y
#BR2_PACKAGE_IMG_MESA3D_GALLIUM_DRIVER_SWRAST=y
#BR2_PACKAGE_IMG_MESA3D_GALLIUM_DRIVER_VIRGL=y
#BR2_PACKAGE_IMG_MESA3D_GALLIUM_DRIVER_PVR=y
#BR2_PACKAGE_IMG_MESA3D_VULKAN_DRIVER=y
#BR2_PACKAGE_IMG_MESA3D_VULKAN_DRIVER_PVR=y
#BR2_PACKAGE_MESA3D_DEMOS=y
#BR2_PACKAGE_LIBGLVND=y

# Graphics stack
BR2_PACKAGE_REGLINUX_WAYLAND=y
BR2_PACKAGE_REGLINUX_SWAY=y
BR2_PACKAGE_REGLINUX_XWAYLAND=y

# Bootloader
BR2_PACKAGE_UBOOT_BANANAPI_F3=y

# Filesystem
BR2_TARGET_ROOTFS_CPIO_LZ4=y
