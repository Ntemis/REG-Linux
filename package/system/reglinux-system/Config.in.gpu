config BR2_PACKAGE_REGLINUX_VULKAN
	bool "REG-Linux Vulkan support"

	# Vulkan headers, loaders, SPIR-V, glsLang
	select BR2_PACKAGE_VULKAN_HEADERS
	select BR2_PACKAGE_VULKAN_LOADER
	select BR2_PACKAGE_VULKAN_VOLK
	select BR2_PACKAGE_VULKAN_TOOLS
	select BR2_PACKAGE_SPIRV_TOOLS

	# Vulkan mesa drivers
	select BR2_PACKAGE_MESA3D_VULKAN_DRIVER_INTEL		if BR2_PACKAGE_SYSTEM_TARGET_X86_ANY
	select BR2_PACKAGE_MESA3D_VULKAN_DRIVER_HASWELL		if BR2_PACKAGE_SYSTEM_TARGET_X86_ANY
	select BR2_PACKAGE_MESA3D_VULKAN_DRIVER_AMD		if BR2_PACKAGE_SYSTEM_TARGET_X86_ANY
	select BR2_PACKAGE_MESA3D_VULKAN_DRIVER_BROADCOM	if BR2_PACKAGE_SYSTEM_TARGET_BCM2711 || BR2_PACKAGE_SYSTEM_TARGET_BCM2712
	select BR2_PACKAGE_MESA3D_VULKAN_DRIVER_PANFROST	if BR2_PACKAGE_SYSTEM_PANFROST_MESA3D
	select BR2_PACKAGE_MESA3D_VULKAN_DRIVER_FREEDRENO	if BR2_PACKAGE_SYSTEM_FREEDRENO_MESA3D
	select BR2_PACKAGE_MESA3D_VULKAN_DRIVER_ASAHI		if BR2_PACKAGE_REGLINUX_ASAHI_MESA3D

	# Zink for OpenGL on-the-top of Vulkan
	select BR2_PACKAGE_MESA3D_GALLIUM_DRIVER_ZINK		if BR2_PACKAGE_MESA3D

	# for debug purposes
	select BR2_PACKAGE_MESA3D_VULKAN_DRIVER_LAVAPIPE	if BR2_PACKAGE_SYSTEM_TARGET_X86_ANY

	help
	  Vulkan support for REG-Linux

