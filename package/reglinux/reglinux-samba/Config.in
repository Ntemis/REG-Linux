config BR2_PACKAGE_REGLINUX_SAMBA
        bool "reglinux-samba"

	select BR2_PACKAGE_SAMBA4	\
		if BR2_PACKAGE_BATOCERA_TARGET_RK3128 || BR2_PACKAGE_BATOCERA_TARGET_A3GEN2 || BR2_PACKAGE_BATOCERA_TARGET_S9GEN4 || BR2_PACKAGE_BATOCERA_TARGET_RK3588
	select BR2_PACKAGE_KSMBD_TOOLS  \
		if (!BR2_PACKAGE_BATOCERA_TARGET_RK3128) && (!BR2_PACKAGE_BATOCERA_TARGET_A3GEN2) && (!BR2_PACKAGE_BATOCERA_TARGET_S9GEN4) && (!BR2_PACKAGE_BATOCERA_TARGET_RK3588)
	select BR2_PACKAGE_LIBSMBCLIENT \
		if (!BR2_PACKAGE_BATOCERA_TARGET_RK3128) && (!BR2_PACKAGE_BATOCERA_TARGET_A3GEN2) && (!BR2_PACKAGE_BATOCERA_TARGET_S9GEN4) && (!BR2_PACKAGE_BATOCERA_TARGET_RK3588)

        help
          Samba implementation using either ksmbd+libsmbclient or plain samba4
