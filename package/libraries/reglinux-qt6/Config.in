source "$BR2_EXTERNAL_REGLINUX_PATH/package/libraries/reglinux-qt6/qt6multimedia/Config.in"

config BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	bool "reglinux-qt6-build-from-source"
	default n

config BR2_PACKAGE_REGLINUX_HAS_QT6
	bool

config BR2_PACKAGE_REGLINUX_QT6
	bool "reglinux-qt6"
	depends on BR2_ARCH_IS_64 || BR2_PACKAGE_HAS_LIBGL || BR2_PACKAGE_HAS_GLES3

	select BR2_PACKAGE_DOUBLE_CONVERSION
	select BR2_PACKAGE_ICU
	select BR2_PACKAGE_LIBB2
	select BR2_PACKAGE_PCRE2
	select BR2_PACKAGE_PCRE2_16
	select BR2_PACKAGE_PCRE2_32 # REG fix qt6.5 build failing if not PCRE2_32 selected
	select BR2_PACKAGE_ZLIB
	select BR2_PACKAGE_LIBXKBCOMMON			if BR2_PACKAGE_XWAYLAND
	select BR2_PACKAGE_XCB_UTIL_CURSOR		if BR2_PACKAGE_XWAYLAND
	select BR2_PACKAGE_XCB_UTIL_KEYSYMS		if BR2_PACKAGE_XWAYLAND
	select BR2_PACKAGE_FONTCONFIG
	select BR2_PACKAGE_LIBGLIB2
	select BR2_PACKAGE_LIBPNG
	select BR2_PACKAGE_FREETYPE
	select BR2_PACKAGE_DBUS

	select BR2_PACKAGE_QT6				if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6_VERSION_LATEST		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_HOST_QT6BASE_TEST		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_HOST_QT6BASE_SQL		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_HOST_QT6TOOLS_LINGUIST_TOOLS	if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_CONCURRENT		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_DBUS			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_FONTCONFIG		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_GIF			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_GUI			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_JPEG			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_NETWORK		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_PNG			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_PRINTSUPPORT		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_SQL			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_TEST			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_WIDGETS		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_XML			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6BASE_OPENGL		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE && BR2_PACKAGE_HAS_LIBGL
	select BR2_PACKAGE_QT6BASE_OPENGL_DESKTOP	if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE && BR2_PACKAGE_HAS_LIBGL
	select BR2_PACKAGE_QT6BASE_OPENGL_ES2		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE && BR2_PACKAGE_HAS_LIBGLES
	select BR2_PACKAGE_QT6BASE_EGLFS		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE && BR2_PACKAGE_HAS_LIBEGL
	select BR2_PACKAGE_QT6BASE_XCB			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE && BR2_PACKAGE_XORG7
	select BR2_PACKAGE_QT6BASE_VULKAN		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE && BR2_PACKAGE_REGLINUX_VULKAN
	select BR2_PACKAGE_QT6DECLARATIVE		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6MULTIMEDIA		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6SHADERTOOLS		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6SVG			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6TOOLS			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6TOOLS_LINGUIST_TOOLS	if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6WAYLAND			if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE
	select BR2_PACKAGE_QT6WEBSOCKETS		if BR2_PACKAGE_REGLINUX_QT6_BUILD_FROM_SOURCE

	select BR2_PACKAGE_REGLINUX_HAS_QT6

	help
	    Prebuilt (or built from source) REG-Linux QT6 stack
