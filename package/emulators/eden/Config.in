config BR2_PACKAGE_EDEN
    bool "eden"
    depends on BR2_x86_64 || BR2_aarch64
    select BR2_PACKAGE_JSON_FOR_MODERN_CPP
    select BR2_PACKAGE_REGLINUX_QT6
    select BR2_PACKAGE_SDL2
    select BR2_PACKAGE_FMT
    select BR2_PACKAGE_BOOST
    select BR2_PACKAGE_BOOST_CONTEXT
    select BR2_PACKAGE_ZSTD
    select BR2_PACKAGE_ZLIB
    select BR2_PACKAGE_LIBZIP
    select BR2_PACKAGE_LIBUSB
    select BR2_PACKAGE_LZ4
    select BR2_PACKAGE_CATCH2
    select BR2_PACKAGE_OPUS
    select BR2_PACKAGE_ENET
    select BR2_PACKAGE_GAMEMODE
    select BR2_PACKAGE_LIBVA
    select BR2_PACKAGE_REGLINUX_XWAYLAND
    # Use system ffmpeg on aarch64
    select BR2_PACKAGE_FFMPEG			if BR2_aarch64
    # Need yasm on x86_64 to compile bundled ffmpeg
    select BR2_PACKAGE_HOST_YASM		if BR2_x86_64

    help
      Eden: Nintendo Switch Emulator

	    https://eden-emu.dev/
