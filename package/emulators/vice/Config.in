config BR2_PACKAGE_VICE
	bool "vice"
	#needs old ffmpeg 4.x select BR2_PACKAGE_FFMPEG
	select BR2_PACKAGE_SDL2
	select BR2_PACKAGE_SDL2_IMAGE
	select BR2_PACKAGE_PNG
	select BR2_PACKAGE_JPEG
	select BR2_PACKAGE_GIFLIB
	select BR2_PACKAGE_ZLIB
	select BR2_PACKAGE_LAME
	select BR2_PACKAGE_ALSA_LIB
	select BR2_PACKAGE_LIBCURL
	select BR2_PACKAGE_LIBVORBIS
	select BR2_PACKAGE_MPG123
	select BR2_PACKAGE_FLAC
	select BR2_PACKAGE_HOST_XA
	select BR2_PACKAGE_HOST_DOS2UNIX
	help
	  VICE is an emulator collection which emulates the C64, the C64-DTV, the C128, the VIC20, practically all PET models, the PLUS4 and the CBM-II (aka C610). It runs on Unix, MS-DOS, Win32, OS/2, Acorn RISC OS, BeOS, QNX 6.x, Amiga, GP2X or Mac OS X machines.

# Select which VICE binaries we should build
config BR2_PACKAGE_VICE_X64
    bool "Build x64 (C64 standard)"
    default y
    depends on BR2_PACKAGE_VICE
    help
      Build the standard C64 binary (x64).

config BR2_PACKAGE_VICE_X128
    bool "Build x128 (C128)"
    default y
    depends on BR2_PACKAGE_VICE
    help
      Build the Commodore 128 binary (x128).

config BR2_PACKAGE_VICE_XVIC
    bool "Build xvic (VIC-20)"
    default y
    depends on BR2_PACKAGE_VICE
    help
      Build the VIC-20 binary (xvic).

config BR2_PACKAGE_VICE_XPLUS4
    bool "Build xplus4 (Plus/4)"
    default y
    depends on BR2_PACKAGE_VICE
    help
      Build the Commodore Plus/4 binary (xplus4).

config BR2_PACKAGE_VICE_XPET
    bool "Build xpet (PET/CBM-II)"
    default y
    depends on BR2_PACKAGE_VICE
    help
      Build the PET/CBM-II binary (xpet).

config BR2_PACKAGE_VICE_XCBM2
    bool "Build xcbm2 (CBM-II variant)"
    default y
    depends on BR2_PACKAGE_VICE
    help
      Build the CBM-II variant binary (xcbm2).

# Those cores require fast cpu to run fullspeed
config BR2_PACKAGE_VICE_X64DTV
    bool "Build x64dtv (C64-DTV standard)"
    depends on BR2_PACKAGE_VICE
    help
      Build the standard C64-DTV binary (x64dtv).

config BR2_PACKAGE_VICE_X64SC
    bool "Build x64sc (C64 Single Cycle)"
    depends on BR2_PACKAGE_VICE
    help
      Build the C64 Single Cycle binary (x64sc) for precise timing.

config BR2_PACKAGE_VICE_XSCPU64
    bool "Build xscpu64 (C64 SuperCPU)"
    depends on BR2_PACKAGE_VICE
    help
      Build the C64 SuperCPU binary (xscpu64).

